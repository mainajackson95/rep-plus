{
  "manifest_version": 2,
  "name": "rep+ (Firefox)",
  "version": "1.0",
  "description": "A lightweight Repeater-like DevTools panel with multi-tab capture.",
  "author": "Bour Abdelhadi with help of LLM",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "<all_urls>"
  ],
  "optional_permissions": [
    "webRequestBlocking"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "repplus@example.com",
      "strict_min_version": "91.0"
    }
  }
}